    {{#if @site.cover_image}}
        <img class="cover-image u-object-fit" src="{{@site.cover_image}}" alt="{{@site.title}}">
    {{/if}}

    <div class="cover-content">
        {{#if @site.description}}
            <div class="cover-description">
                {{#if @custom.email_signup_text}}
                    {{@custom.email_signup_text}}
                {{else}}
                    {{@site.description}}
                {{/if}}
            </div>
        {{/if}}
        <div></div>
        <form class="form-wrapper cover-form" data-members-form></form>
         <button class="form-button" type="submit" aria-label="Submit" href="https://www.eventbrite.com/notavailable">
           <span class="default" >Anmelden</span>
        </button>
  </form>
